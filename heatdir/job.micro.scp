#!/bin/bash

# Job Name and Files (also --job-name)
#SBATCH -J heat

#SBATCH --output=./results/job-%j.out
#SBATCH --error=./results/job-%j.out

# Wall clock limit:
#SBATCH --time=00:2:30
#SBATCH --account=h039v
#SBATCH --partition=micro

# Request a total of 2 tasks (MPI processes).
#SBATCH --ntasks=24

# Explicitly request that all tasks run on a single node.
#SBATCH --nodes=1

# Launch the MPI program using the number of tasks allocated by SLURM (2).
mpirun -np $SLURM_NTASKS ./heat test.dat
